<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: green;"
          vgap="10"
          xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <Text id="welcome-text" text="Welcome to Roulette" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0" style="-fx-border-color: white;-fx-font-size: 32px;"/>

    <VBox GridPane.rowIndex="1" layoutX="50.0" layoutY="51.0" prefHeight="301.0" prefWidth="224.0"
          style="-fx-border-color: white;-fx-font-size: 32px;"
          AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <children>
            <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="usernameField" text="test" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Button fx:id="loginButton" onAction="#handleLoginButtonAction" mnemonicParsing="false" prefHeight="72.0"
                    prefWidth="1239.0" text="Login">
            </Button>
        </children>
    </VBox>

    <Text fx:id="loginError" fill="RED" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

</GridPane>
